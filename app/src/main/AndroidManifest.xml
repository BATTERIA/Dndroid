<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bilibili.bililive.batteria">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".animation.AnimationTestActivity"></activity>
        <activity
            android:name=".flow.FlowActivity"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".wordmerge.WordMergeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".gesture.GestureActivity"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".opengl.OpenglActivity" />
        <activity android:name=".danmaku.DanmakuActivity" />
        <activity android:name=".FrescoActivity" />
        <activity android:name=".recycler.RecyclerActivity" />
        <activity android:name=".hummer.HummerTestActivity" />
        <activity android:name="com.bilibili.bililive.infra.util.cache.api.CacheActivity" />
        <activity android:name=".ProgressViewActivity" />
        <activity android:name=".ProgressActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".webview.WebViewActivity" /> <!-- android:process=":web"/> -->
        <activity
            android:name=".imageloader.ImageLoaderActivity"
            android:launchMode="singleTask" />
    </application>

</manifest>